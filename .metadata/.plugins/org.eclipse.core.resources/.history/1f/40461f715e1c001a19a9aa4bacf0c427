<form action="alteraPiloto" method="get">
		Codigo: <input type="hidden" name="codigo" value="${piloto.codigo}"> <br/> 
		Descrição: <input type="text" name="nome" value="${piloto.nome}"> <br/> 
		
		País:
				<select name="pais" >
					<option value="${piloto.pais.codigo }">${piloto.pais.nome}</option>
					<c:forEach var="pais" items="${paises}">
						<option value="${pais.codigo}" >
							${pais.nome}</option>
					</c:forEach>
				</select> 
				<br/>
		Equipe:
				<select name="equipe" >
					<option value="${piloto.equipe.codigo }">${piloto.equipe.descricao}</option>
					<c:forEach var="equipe" items="${equipes}">
						<option value="${equipe.codigo}" >
							${equipe.descricao}</option>
					</c:forEach>
				</select> 
				<br/>
		Categorias:
				<select name="categoria">
					<option value="${piloto.categoria}">${piloto.categoria}</option>
					<c:forEach var="categoria" items="${categorias}">
						<option value="${categoria}" >
							${categoria.descricao}</option>
					</c:forEach>
				</select> 
				<br/>
				
		
		<input type="submit" value="Alterar">
	</form>

